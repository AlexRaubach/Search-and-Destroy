<h2>Enter your ship positions:</h2>
<div class="row">
  <div>
  <%= form_for(:boards, html: { class: "form-horizontal" }) do |f| %>
    <input type="hidden" name="_method" value="PUT" />
    <input type="hidden" name="id" value="<%=@game.id%>" />
    <div class="form-group">
      <%= f.label :patrol_location %>
    <div class="col-sm-6"><%= f.text_field :patrol_location %></div>
    </div>
    <div class="form-group">
      <%= f.label :sub_location %>
      <div class="col-sm-6"><%= f.text_field :sub_location %></div>
    </div>
    <div class="form-group">
      <%= f.label :carrier_location %>
      <div class="col-sm-6"><%= f.text_field :carrier_location %></div>
    </div>
    <div class="form-group">
      <%= f.label :battleship_location %>
      <div class="col-sm-6"><%= f.text_field :battleship_location %></div>
    </div>
    <div class="form-group">
      <%= f.label :destroyer_location %>
      <div class="col-sm-6"><%= f.text_field :destroyer_location %></div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-6"><%= f.submit "place ships" %></div>
    </div>
  <% end %>
  </div>
</div>
