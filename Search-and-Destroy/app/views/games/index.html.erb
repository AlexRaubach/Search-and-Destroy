

  <% if @games.count != 0%>
  <h2>Choose an ongoing game:</h2>
    <table>
      <% @games.each do |game| %>
        <tr>
          <td><%= link_to "game number #{game.id}", game_path(game) %></td>
        </tr>
      <% end %>
    </table>
  <h2> Or:</h2>
  <%end%>

<div id="start-game">
  <%= link_to "Start Game", "/games/new", style: "#{'display:none' if session[:user_id] == nil}" %>
</div>

<br>

<p> Create or change your name:</p>

<div id="new-user">
  <%= form_tag("/users", method: "post") do %>
    <%= text_field_tag 'name' %>
    <%= submit_tag ("Submit") %>
  <% end %>
</div>




